{
	"name": "vscode-echarts-extension",
	"displayName": "vscode extension for ECharts",
	"description": "Autocomplete for ECharts",
	"version": "0.1.5",
	"icon": "images/logo.png",
	"engines": {
		"vscode": "^1.43.0"
	},
	"categories": [
		"Snippets"
	],
	"publisher": "susiwen8",
	"repository": "https://github.com/susiwen8/echarts-vscode-extension.git",
	"activationEvents": [
		"onLanguage:javascript"
	],
	"main": "./dist/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "echarts.activate",
				"title": "Active ECharts Extension"
			},
			{
				"command": "echarts.deactivate",
				"title": "Deactivate ECharts Extension"
			},
			{
				"command": "echarts.reload",
				"title": "Reload ECharts Extension"
			}
		],
		"snippets": [
			{
				"language": "javascript",
				"path": "./src/json/snippets.json"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "webpack --mode production",
		"webpack": "webpack --mode development",
		"webpack-dev": "webpack --mode development --watch",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile",
		"lint": "eslint ./src --ext .ts",
		"lint-fix": "eslint ./src/**/*.ts --fix",
		"pack": "vsce package",
		"publish": "vsce publish"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.2",
		"@types/node": "^13.9.1",
		"@types/vscode": "^1.43.0",
		"@typescript-eslint/eslint-plugin": "^2.24.0",
		"@typescript-eslint/parser": "^2.26.0",
		"@types/lodash": "^4.14.149",
		"eslint": "^6.8.0",
		"eslint-config-airbnb-typescript": "^7.0.0",
		"eslint-config-prettier": "^6.9.0",
		"glob": "^7.1.5",
		"mocha": "^7.1.0",
		"prettier": "^1.19.1",
		"ts-loader": "^6.2.1",
		"typescript": "^3.8.3",
		"webpack": "^4.42.0",
		"webpack-cli": "^3.3.11"
	},
	"dependencies": {
		"acorn": "^7.1.1",
		"acorn-walk": "^7.1.1",
		"axios": "^0.19.0",
		"lodash": "^4.17.15",
		"ts-morph": "^7.0.0"
	}
}
